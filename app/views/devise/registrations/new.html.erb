<div class="row justify-content-md-center">
  <div class="col-md-auto">

  <h2 class="h2">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render 'partials/message' %>

    <div class="field form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.text_field :fullname, autofocus: true, autocomplete: "email", placeholder: "Enter full name", class: "form-control" %>
    </div>

    <div class="field form-group">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off",placeholder: "Enter password", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "Confrim password", class: "form-control" %>
    </div>

    <div class="actions form-group">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
</div>


